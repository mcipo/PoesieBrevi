  +registrati()
  +accedi()
}

class UtenteRegistrato {
  - nome
  - cognome
  - email
  - password
  + modificaProfilo()
}

class Profilo {
  - username
  - biografia
  - immagineProfilo
  - dataDiNascita
}

class Autore {
  + creaPoesia()
  + creaRaccolta()
  + mettiCuore()
  + scriviCommento()
}

class Amministratore {
  + generaReport()
}

